{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true, // Cruciale per la compatibilità tra require e import
    "outDir": "./dist",

    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Module Resolution */
    "baseUrl": ".", // Dice a TS che la radice per i percorsi è la cartella corrente
    "paths": {
      "@models/*": ["models/*"],
      "@config/*": ["src/config/*"]
    },

    /* Completeness */
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "server.ts",      // Includi esplicitamente il file server.ts nella root
    "src/**/*.ts"     // E tutti i file .ts dentro la cartella src
  ],
  "exclude": [
    "node_modules"
  ]
}
